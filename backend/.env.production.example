# Production Environment Variables for Exam Ready Backend
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=5000

# Database (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/exam-ready?retryWrites=true&w=majority

# JWT Configuration (generate a secure random string)
JWT_SECRET=your-secure-secret-min-32-chars
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS - your Vercel production URL)
FRONTEND_URL=https://your-app.vercel.app

# OCR Service (your PaddleOCR Render deployment)
OCR_SERVICE_URL=https://your-ocr-service.onrender.com

# AI Service - Groq (required for production)
GROQ_API_KEY=gsk_your_groq_api_key

# Cloudinary (required for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional Google Cloud Vision (legacy, not currently used)
# GOOGLE_VISION_API_KEY=your_api_key

# Optional Grok API (legacy, not currently used)
# GROK_API_KEY=your_api_key
# GROK_API_URL=https://api.x.ai/v1/chat/completions

# Feature Flags (production should use real services)
USE_MOCK_OCR=false
USE_MOCK_AI=false
